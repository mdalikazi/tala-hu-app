<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWindowBackgroundBlack"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/portal_sidebar_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/portal_sidebar_top" />

            <ImageView
                android:id="@+id/portal_sidebar_bottom_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/portal_sidebar_top"
                android:src="@drawable/portal_sidebar_bottom_1"/>

            <ImageView
                android:id="@+id/portal_sidebar_bottom_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/portal_sidebar_top"
                android:src="@drawable/portal_sidebar_bottom_2"
                android:visibility="gone"/>

            <Button
                android:id="@+id/portal_button_1"
                android:layout_width="210dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:layout_alignTop="@+id/portal_sidebar_bottom_2"
                android:background="@color/colorTransparent"
                android:visibility="gone"/>

            <Button
                android:id="@+id/portal_button_2"
                android:layout_width="210dp"
                android:layout_height="20dp"
                android:layout_below="@+id/portal_button_1"
                android:layout_marginTop="5dp"
                android:background="@color/colorTransparent"
                android:visibility="gone"/>

            <Button
                android:id="@+id/portal_button_3"
                android:layout_width="210dp"
                android:layout_height="20dp"
                android:layout_below="@+id/portal_button_2"
                android:layout_marginTop="60dp"
                android:background="@color/colorTransparent"
                android:visibility="gone"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>